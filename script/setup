#!/bin/bash

echo "Setup a new environment"

source ./script/install

if [ "$1" == "homebrew" ] || [ "$1" == 'brew' ]; then
    installHomebrew
fi;

if [ "$1" == "" ]; then
    echo "Please provide installer"
    exit 1
fi;

installCliTools

