#!/bin/bash

installHomebrew() {
    echo "Install Homebrew"
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
}

installCliToolsApt() {
    echo "Install Cli Tools with apt-get"

    while read tool; do
        echo "Install $tool"
        apt-get install -y $tool
        echo
    done < ./script/cli-tools
}

installCliToolsBrew() {
    echo "Install Cli Tools with Homebrew"

    while read tool; do
        echo "Install $tool"
        brew install $tool
        echo
    done < ./script/cli-tools
}
